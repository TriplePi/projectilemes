<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
            android:id="@+id/processing_state_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Состояние обработки"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            />

    <Button
            android:id="@+id/pause_processing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/processing_state_label"
            android:layout_marginTop="8dp"
            android:text="Задержать обработку"
            />

    <Button
            android:id="@+id/disable_work_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
</android.support.constraint.ConstraintLayout>