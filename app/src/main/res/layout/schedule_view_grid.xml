<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="vertical"
        android:rowCount="4"
        android:layout_margin="8dp"
        >

    <TextView
            android:id="@+id/operation_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Операция:"
            android:layout_column="0"
            android:layout_row="0"
            />


    <TextView
            android:id="@+id/product_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номенклатура:"
            android:layout_column="0"
            android:layout_row="1"
            />


    <TextView
            android:id="@+id/operation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Расточная"
            android:layout_column="1"
            android:layout_row="0"
            />

    <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Продукт №1"
            android:layout_column="1"
            android:layout_row="1"
            />

    <TextView
            android:id="@+id/quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Расточная"
            android:layout_column="0"
            android:layout_row="2"
            />

    <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10"
            android:layout_column="1"
            android:layout_row="2"
            />

    <TextView
            android:id="@+id/order_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Заказ:"
            android:layout_column="0"
            android:layout_row="3"
            />

    <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Заказ №1"
            android:layout_column="1"
            android:layout_row="3"
            />

    <TextView
            android:id="@+id/start_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время начала:"
            android:layout_column="2"
            android:layout_row="0"
            />

    <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            tools:text="10:00"
            />

    <TextView
            android:id="@+id/end_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время окончания:"
            android:layout_column="2"
            android:layout_row="1"
            />

    <TextView
            android:id="@+id/end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12:00"
            android:layout_column="3"
            android:layout_row="1"
            />

    <TextView
            android:id="@+id/duration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Длительность:"
            android:layout_column="2"
            android:layout_row="2"
            />

    <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2:00"
            android:layout_column="3"
            android:layout_row="2"
            />

</GridLayout>